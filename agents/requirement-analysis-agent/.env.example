# Requirement Analysis Agent Environment Configuration

# Service Configuration
SERVICE_NAME=requirement-analysis-agent
ENVIRONMENT=development
GRPC_PORT=9004
HTTP_PORT=8084
LOG_LEVEL=INFO

# Anthropic Configuration (Claude Sonnet 4)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Agent Connections
DOMAIN_AGENT_HOST=localhost
DOMAIN_AGENT_PORT=9002
TEST_CASES_AGENT_HOST=localhost
TEST_CASES_AGENT_PORT=9003

# Timeouts (in seconds)
GRPC_TIMEOUT=30
LLM_TIMEOUT=120
AGENT_TIMEOUT=30

# Performance
MAX_WORKERS=10
MAX_CONCURRENT_REQUESTS=100

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
